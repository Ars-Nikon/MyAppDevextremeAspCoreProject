@{
    Layout = null;
}
@model MyAppDevextremeAspCoreProject.Models.UserLogin
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Ars_Nikon">
    <meta name="author" content="Ars_Nikon">
    <title>Signin</title>
    <link href="~/css/devextreme/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container text-center p-5">
    <div class="p-5 mb-4 bg-light rounded-3">
        <form class="form-signin" asp-action="Login" method="post" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="All" class="text-danger"></div>
            <h1 class="h3 mb-3 font-weight-normal">Вход в систему администрирования</h1>
            <input type="hidden" name="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]" />
            <div class="form-group">
                <label asp-for="Login">Логин</label>
                <input class="form-control" type="text" asp-for="Login" placeholder="Логин">
            </div>
            <div class="form-group">
                <label asp-for="Password">Пароль</label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Пароль">
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Вход</button>
        </form>
    </div>
</body>
</html>